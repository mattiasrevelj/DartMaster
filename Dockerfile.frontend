# Build stage
FROM node:18-alpine AS build
WORKDIR /app

COPY frontend/package*.json ./
RUN npm install

COPY frontend/ .
RUN npm run build

# Production stage
FROM node:18-alpine
WORKDIR /app

# Install serve to run the frontend
RUN npm install -g serve

COPY --from=build /app/dist ./dist

EXPOSE 3000
ENV NODE_ENV=production

ENTRYPOINT ["serve", "-s", "dist", "-l", "3000"]
